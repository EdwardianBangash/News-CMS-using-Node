<%- include('./includes/header') %>

<div class="main">
    <h2>All Categories</h2>
    <table>
        <tr>
            <td>#</td>
            <td>Name</td>
            <td>Action</td>
        </tr>
        <tbody>
            <% if(typeof categories != 'undefined'){
                categories.forEach((category) => {
            %>
            <tr>
                <td><%= category._id %></td>
                <td><%= category.category_name %></td>
                <td>
                    <div class="btn-group">
                        <a href="/editCategory?id=<%= category._id %>">Edit</a>
                        <a href="/deleteCategory?id=<%= category._id %>">Delete</a>
                    </div>
                </td>
            </tr>
            <% }) } %>
        </tbody>
    </table>
</div>

<%- include('./includes/footer') %>